<UserControl
    x:Class="Torshify.Radio.Core.Views.Stations.StationsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:Controls="clr-namespace:Torshify.Radio.Framework.Controls;assembly=Torshify.Radio.Framework"
    xmlns:Stations="clr-namespace:Torshify.Radio.Core.Views.Stations"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="300">
    <Controls:SizeTemplateControl>
        <Controls:SizeTemplateControl.Templates>
            <Controls:SizeControlTemplate
                MinWidth="800">
                <ControlTemplate>
                    <Stations:StationsViewMedium />
                </ControlTemplate>
            </Controls:SizeControlTemplate>
            <Controls:SizeControlTemplate>
                <ControlTemplate>
                    <Stations:StationsViewSmall />
                </ControlTemplate>
            </Controls:SizeControlTemplate>
        </Controls:SizeTemplateControl.Templates>
    </Controls:SizeTemplateControl>
</UserControl>
