    <DockPanel>
        <Viewbox
            DockPanel.Dock="Left"
            Height="16"
            Width="16"
            Margin="0,0,2,2"
            VerticalAlignment="Bottom">
            <ContentControl
                Width="25.0035"
                Height="17.0299"
                Content="{Binding}">
                <ContentControl.ContentTemplate>
                    <DataTemplate>
                        <Path
                            Name="VolumePath"
                            Width="25.0035"
                            Height="17.0299"
                            Stretch="Uniform"
                            HorizontalAlignment="Left"
                            Fill="{DynamicResource {x:Static Framework:AppTheme.ForegroundBrushKey}}"
                            Data="{StaticResource Volume2}" />
                        <DataTemplate.Triggers>
                            <DataTrigger
                                Binding="{Binding Player.Volume, Converter={StaticResource IsLessOrEqualToConverter}, ConverterParameter=1.0}"
                                Value="True">
                                <Setter
                                    Property="Data"
                                    Value="{StaticResource Volume3}"
                                    TargetName="VolumePath" />
                            </DataTrigger>
                            <DataTrigger
                                Binding="{Binding Player.Volume, Converter={StaticResource IsLessOrEqualToConverter}, ConverterParameter=0.66}"
                                Value="True">
                                <Setter
                                    Property="Data"
                                    Value="{StaticResource Volume2}"
                                    TargetName="VolumePath" />
                            </DataTrigger>
                            <DataTrigger
                                Binding="{Binding Player.Volume, Converter={StaticResource IsLessOrEqualToConverter}, ConverterParameter=0.33}"
                                Value="True">
                                <Setter
                                    Property="Data"
                                    Value="{StaticResource Volume1}"
                                    TargetName="VolumePath" />
                            </DataTrigger>
                            <DataTrigger
                                Binding="{Binding Player.Volume, Converter={StaticResource IsLessOrEqualToConverter}, ConverterParameter=0.0}"
                                Value="True">
                                <Setter
                                    Property="Data"
                                    Value="{StaticResource Mute}"
                                    TargetName="VolumePath" />
                            </DataTrigger>
                        </DataTemplate.Triggers>
                    </DataTemplate>
                </ContentControl.ContentTemplate>
            </ContentControl>
        </Viewbox>
        <DockPanel>
            <Controls:DragSlider
                DockPanel.Dock="Bottom"
                Margin="0,0,0,2"
                Value="{Binding Player.Volume, UpdateSourceTrigger=PropertyChanged}"
                Minimum="0.0"
                Maximum="1.0"
                SmallChange="0.01"
                LargeChange="0.1">
                <i:Interaction.Behaviors>
                    <Behaviors:EnableSliderMouseWheel />
                </i:Interaction.Behaviors>
            </Controls:DragSlider>
            <StackPanel
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <Button
                    BorderThickness="0"
                    Command="{Binding TogglePlayPauseCommand}"
                    Content="{Binding}">
                    <Button.ContentTemplate>
                        <DataTemplate>
                            <Image
                                Name="img"
                                Source="pack://siteoforigin:,,,/Resources/Icons/pause.png"
                                Visibility="Visible"
                                RenderTransformOrigin="0.5,0.5">
                                <Image.RenderTransform>
                                    <RotateTransform
                                        Angle="0" />
                                </Image.RenderTransform>
                            </Image>
                            <DataTemplate.Triggers>
                                <DataTrigger
                                    Binding="{Binding IsPlaying}"
                                    Value="False">
                                    <Setter
                                        Property="Source"
                                        Value="pack://siteoforigin:,,,/Resources/Icons/play.png"
                                        TargetName="img" />
                                </DataTrigger>
                                <DataTrigger
                                    Binding="{Binding IsEnabled, RelativeSource={RelativeSource AncestorType={x:Type Button}}}"
                                    Value="False">
                                    <Setter
                                        Property="Opacity"
                                        Value="0.5" />
                                </DataTrigger>
                                <DataTrigger
                                    Binding="{Binding Player.IsBuffering}"
                                    Value="True">
                                    <DataTrigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation
                                                    Storyboard.TargetName="img"
                                                    Storyboard.TargetProperty="(Image.RenderTransform).(RotateTransform.Angle)"
                                                    To="360"
                                                    RepeatBehavior="Forever" />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </DataTrigger.EnterActions>
                                    <DataTrigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation
                                                    Storyboard.TargetName="img"
                                                    Storyboard.TargetProperty="(Image.RenderTransform).(RotateTransform.Angle)"
                                                    To="0"
                                                    Duration="0:0:0" />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </DataTrigger.ExitActions>
                                    <Setter
                                        Property="Source"
                                        Value="pack://siteoforigin:,,,/Resources/Icons/refresh.png"
                                        TargetName="img" />
                                </DataTrigger>
                            </DataTemplate.Triggers>
                        </DataTemplate>
                    </Button.ContentTemplate>
                </Button>
                <Button
                    BorderThickness="0"
                    Command="{Binding NextTrackCommand}">
                    <Button.ContentTemplate>
                        <DataTemplate>
                            <Image
                                Name="img"
                                Source="pack://siteoforigin:,,,/Resources/Icons/ff.png" />
                            <DataTemplate.Triggers>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition
                                            Binding="{Binding Radio.CanGoToNextTrackStream}"
                                            Value="True" />
                                        <Condition
                                            Binding="{Binding Radio.CanGoToNextTrack}"
                                            Value="False" />
                                    </MultiDataTrigger.Conditions>
                                    <Setter
                                        Property="Source"
                                        Value="pack://siteoforigin:,,,/Resources/Icons/fff.png"
                                        TargetName="img" />
                                </MultiDataTrigger>
                                <DataTrigger
                                    Binding="{Binding IsEnabled, RelativeSource={RelativeSource AncestorType={x:Type Button}}}"
                                    Value="False">
                                    <Setter
                                        Property="Opacity"
                                        Value="0.5"
                                        TargetName="img" />
                                </DataTrigger>
                            </DataTemplate.Triggers>
                        </DataTemplate>
                    </Button.ContentTemplate>
                </Button>
            </StackPanel>
        </DockPanel>
    </DockPanel>
</UserControl>
