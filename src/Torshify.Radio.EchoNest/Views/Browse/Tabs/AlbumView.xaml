<Grid
    x:Class="Torshify.Radio.EchoNest.Views.Browse.Tabs.AlbumView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:Engine="clr-namespace:WPFLocalizeExtension.Engine;assembly=WPFLocalizeExtension"
    Engine:LocalizeDictionary.DesignCulture="en-US"
    xmlns:fx="clr-namespace:Torshify.Radio.Framework.Controls;assembly=Torshify.Radio.Framework"
    xmlns:Tabs="clr-namespace:Torshify.Radio.EchoNest.Views.Browse.Tabs"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="300">
    <fx:SizeTemplateControl>
        <fx:SizeTemplateControl.Templates>
            <fx:SizeControlTemplate
                MinWidth="600">
                <ControlTemplate>
                    <Tabs:AlbumViewMedium />
                </ControlTemplate>
            </fx:SizeControlTemplate>
            <fx:SizeControlTemplate>
                <ControlTemplate>
                    <Tabs:AlbumViewSmall />
                </ControlTemplate>
            </fx:SizeControlTemplate>
        </fx:SizeTemplateControl.Templates>
    </fx:SizeTemplateControl>
</Grid>
