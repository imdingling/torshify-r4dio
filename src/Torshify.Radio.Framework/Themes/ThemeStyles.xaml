                                            Storyboard.TargetName="BackgroundBorder"
                                            Storyboard.TargetProperty="Opacity"
                                            To="0.4"
                                            Duration="0:0:0.2" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                        <Trigger
                            Property="SortDirection"
                            Value="Ascending">
                            <Setter
                                TargetName="SortArrow"
                                Property="Visibility"
                                Value="Visible" />
                            <Setter
                                TargetName="SortArrow"
                                Property="RenderTransform">
                                <Setter.Value>
