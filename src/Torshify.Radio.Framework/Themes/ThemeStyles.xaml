                                Property="Grid.Row"
                                TargetName="HeaderPanel"
                                Value="1" />
                            <Setter
                                Property="Grid.Row"
                                TargetName="ContentPanel"
                                Value="0" />
                            <Setter
                                Property="Height"
                                TargetName="RowDefinition0"
                                Value="*" />
                            <Setter
                                Property="Height"
                                TargetName="RowDefinition1"
                                Value="Auto" />
                            <Setter
                                Property="Margin"
                                TargetName="HeaderPanel"
                                Value="2,0,2,2" />
