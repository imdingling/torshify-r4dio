                            Value="Left">
                            <Setter
                                Property="Grid.Row"
                                TargetName="HeaderPanel"
                                Value="0" />
                            <Setter
                                Property="Grid.Row"
                                TargetName="ContentPanel"
                                Value="0" />
                            <Setter
